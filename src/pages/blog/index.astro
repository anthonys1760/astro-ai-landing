---
import Layout from "../../layouts/Layout.astro";
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { Image } from 'astro:assets';

// Import featured image assets to mirror BlogPostLayout mapping
import astronautImage from '../../assets/astronaut-in-space.jpg';

// Map image names (from frontmatter `image`) to imported assets
const imageMap: Record<string, any> = {
  'astronaut-in-space': astronautImage,
};

// Dynamically load blog posts from markdown files in this directory
const modules = import.meta.glob('./*.md');
const posts = (
  await Promise.all(
    Object.entries(modules).map(async ([path, resolver]) => {
      const mod: any = await resolver();
      const fm = mod.frontmatter || {};
      // derive slug from file path ./file.md -> file
      const slug = path.replace('./', '').replace('.md', '');
      return {
        slug,
        title: fm.title || slug,
        excerpt: fm.excerpt || '',
        date: fm.date || '',
        author: fm.author || 'Astro AI Team',
        image: fm.image || '',
        tags: fm.tags || [],
      };
    })
  )
).sort((a, b) => {
  const da = new Date(a.date as string).getTime();
  const db = new Date(b.date as string).getTime();
  if (isNaN(da) && isNaN(db)) return 0;
  if (isNaN(da)) return 1;
  if (isNaN(db)) return -1;
  return db - da;
});
---

<Layout 
  title="AI Technology Blog - Latest Insights from Astro AI" 
  description="Explore the latest AI technology trends, productivity tips, and insights about artificial intelligence assistants from the team behind Astro AI."
  keywords="AI blog, artificial intelligence news, AI technology trends, productivity tips, AI assistant features, machine learning insights, AI privacy, future of AI, AI productivity tools, personal assistant technology"
>
  <div class="min-h-screen bg-dark">
    <Header />
    <main>
      <div class="container-custom py-16">
    <div class="text-center mb-16">
      <h1 class="text-4xl md:text-5xl font-bold mb-6">
        <span class="gradient-text">Astro AI Blog</span>
      </h1>
      <p class="text-lg text-gray-300 max-w-2xl mx-auto">
        Insights, updates, and educational content about AI technology, productivity, 
        and how Astro AI is transforming the way we interact with artificial intelligence.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {posts.map(post => (
        <div class="bg-dark-light rounded-xl overflow-hidden shadow-lg transition-all hover:shadow-2xl hover:-translate-y-1 duration-300">
          <div class="aspect-video bg-gray-800 w-full">
            {post.image && imageMap[post.image] ? (
              <Image
                src={imageMap[post.image]}
                alt={post.title}
                class="w-full h-full object-cover"
              />
            ) : post.image && /\.(png|jpg|jpeg|webp|gif|svg)$/i.test(post.image) ? (
              <img 
                src={`/assets/${post.image}`}
                alt={post.title}
                class="w-full h-full object-cover" />
            ) : (
              <div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-primary/20 to-secondary/20">
                <span class="text-2xl">üñºÔ∏è</span>
              </div>
            )}
          </div>
          
          <div class="p-6">
            <div class="flex gap-2 mb-3">
              {post.tags.map(tag => (
                <span class="inline-flex items-center text-xs px-2 py-0.5 leading-none bg-primary/20 text-primary rounded-full">{tag}</span>
              ))}
            </div>
            
            <h3 class="text-xl font-bold mb-2">
              <a href={`/blog/${post.slug}`} class="hover:text-primary transition-colors">
                {post.title}
              </a>
            </h3>
            
            <p class="text-gray-300 text-sm mb-4">
              {post.excerpt}
            </p>
            
            <div class="flex items-center justify-between mt-4">
              <div class="flex items-center gap-2">
                <img src="/logo/spaceman.png" alt="Astro AI Team" class="w-7 h-7 rounded-full object-cover" />
                <span class="text-sm text-gray-400">{post.author}</span>
              </div>
              <span class="text-xs text-gray-500">{post.date}</span>
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <div class="mt-16 text-center">
      <p class="text-gray-300">
        Stay tuned for more content about AI technology and Astro AI features!
      </p>
      <a href="https://apps.apple.com/us/app/astroai-x/id6748281772" class="btn btn-primary inline-block mt-4">
        Download on iOS
      </a>
      </div>
    </main>
    <Footer />
  </div>
</Layout>
