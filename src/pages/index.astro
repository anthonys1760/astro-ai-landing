---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Features from '../components/Features.astro';
import HowItWorks from '../components/HowItWorks.astro';
import Testimonials from '../components/Testimonials.astro';
import Pricing from '../components/Pricing.astro';
import WaitlistForm from '../components/WaitlistForm.astro';
import CTA from '../components/CTA.astro';
import Footer from '../components/Footer.astro';
---

<Layout 
  title="Astro AI - Your Personal AI Assistant for Maximum Productivity" 
  description="Astro AI is your intelligent personal AI assistant that helps you get things done faster with natural conversations, task automation, and powerful productivity features for both iOS and Android."
  keywords="AI assistant app, virtual assistant, productivity AI, task automation, personal AI, AI chatbot, voice commands, smart assistant, AI technology, productivity tools, iOS AI assistant, Android AI assistant"
>
  <div class="min-h-screen bg-dark">
    <Header />
    <main>
      <Hero />
      <Features />
      <HowItWorks />
      <Testimonials />
      <Pricing />
      <WaitlistForm />
      <CTA />
    </main>
    <Footer />
  </div>
</Layout>
