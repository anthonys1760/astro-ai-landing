---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Features from '../components/Features.astro';
import HowItWorks from '../components/HowItWorks.astro';
import Testimonials from '../components/Testimonials.astro';
import Pricing from '../components/Pricing.astro';
import WaitlistForm from '../components/WaitlistForm.astro';
import CTA from '../components/CTA.astro';
import Footer from '../components/Footer.astro';
---

<Layout 
  title="Astro AI X — Your all‑in‑one mobile AI studio" 
  description="Chat, write, code, and summarize with lightning‑fast streaming and beautiful UX. iOS and Android."
  keywords="mobile AI, AI chat app, AI code assistant, AI summarizer, voice AI app, iOS AI, Android AI"
>
  <div class="min-h-screen bg-dark">
    <Header />
    <main>
      <Hero />
      <Features />
      <HowItWorks />
      <Testimonials />
      <Pricing />
      <WaitlistForm />
      <CTA />
    </main>
    <Footer />
  </div>
</Layout>
