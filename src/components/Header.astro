<header class="py-6">
  <div class="container-custom">
    <div class="flex items-center justify-between">
      <div class="flex items-center gap-2">
        <div class="w-10 h-10 md:w-10 md:h-10 lg:w-12 lg:h-12 overflow-hidden rounded-full flex items-center justify-center">
          <img src="/logo/spaceman.png" alt="Astro AI Logo" class="w-full h-full object-cover" />
        </div>
        <span class="text-xl font-bold">Astro AI X</span>
      </div>
      
      <nav class="hidden md:flex items-center gap-8">
        <a href="/#features" class="text-gray-300 hover:text-white transition-colors">Features</a>
        <a href="/#how-it-works" class="text-gray-300 hover:text-white transition-colors">How it works</a>
        <a href="/#pricing" class="text-gray-300 hover:text-white transition-colors">Pricing</a>
        <a href="/blog" class="text-gray-300 hover:text-white transition-colors">Blog</a>
      </nav>
      
      <div class="flex items-center gap-4">
        <a href="/#waitlist" class="btn btn-primary">
          Get Astro AI X
        </a>
        <button id="menu-toggle" class="block md:hidden" aria-controls="mobile-menu" aria-expanded="false" aria-label="Open menu">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile menu -->
    <div id="mobile-menu" class="md:hidden hidden mt-4 border-t border-gray-800 pt-4">
      <nav class="flex flex-col gap-4">
        <a href="/#features" class="text-gray-300 hover:text-white transition-colors">Features</a>
        <a href="/#how-it-works" class="text-gray-300 hover:text-white transition-colors">How it works</a>
        <a href="/#pricing" class="text-gray-300 hover:text-white transition-colors">Pricing</a>
        <a href="/blog" class="text-gray-300 hover:text-white transition-colors">Blog</a>
        <a href="/#waitlist" class="btn btn-primary w-full text-center mt-2">Get Astro AI X</a>
      </nav>
    </div>
  </div>
</header>

<script>
  const toggleBtn = document.getElementById('menu-toggle');
  const menu = document.getElementById('mobile-menu');
  if (toggleBtn && menu) {
    const toggleMenu = () => {
      const isOpen = menu.classList.toggle('hidden') === false; // hidden removed -> open
      toggleBtn.setAttribute('aria-expanded', String(isOpen));
    };
    toggleBtn.addEventListener('click', toggleMenu);

    // Close when clicking a link
    menu.addEventListener('click', (e) => {
      const target = e.target;
      if (target && target.tagName === 'A') {
        if (!menu.classList.contains('hidden')) {
          menu.classList.add('hidden');
          toggleBtn.setAttribute('aria-expanded', 'false');
        }
      }
    });

    // Close on Escape
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && !menu.classList.contains('hidden')) {
        menu.classList.add('hidden');
        toggleBtn.setAttribute('aria-expanded', 'false');
      }
    });
  }
</script>
