---
import Button from "./Button.astro";
import StoreBadges from "./StoreBadges.astro";
---

<section class="py-20 overflow-hidden">
  <div class="container-custom">
    <div class="grid lg:grid-cols-2 items-center gap-12">
      <div>
        <h1 class="text-4xl md:text-5xl font-bold mb-6">
          <span class="gradient-text block">Your all‑in‑one mobile AI studio</span>
        </h1>
        
        <p class="text-lg text-gray-300 mb-8">
          Chat, write, code, and summarize—at lightning speed. Beautiful dark UI, multi‑model intelligence, and ultra‑fast streaming on iOS and Android.
        </p>
        
        <div class="flex flex-wrap gap-4 mb-6">
          <a href="/#waitlist" class="btn bg-primary/20 border border-primary/40 text-white backdrop-blur hover:bg-primary/30 hover:border-primary/60">Get Astro AI X</a>
          <a href="/#waitlist" class="btn bg-white/5 border border-white/20 text-white backdrop-blur hover:bg-white/10">Watch Demo</a>
        </div>
        <!-- Store badges -->
        <div class="mt-4">
          <StoreBadges href="/#waitlist" variant="glass" />
        </div>
        
        
        
        
      </div>
      
      <div class="relative">
        <!-- App Screenshot with existing mockup -->
        <div class="flex justify-center items-center">
          <img 
            src="/astro-ai.png" 
            alt="Astro AI App Screenshot" 
            class="w-full max-w-[420px] sm:max-w-[500px] md:max-w-[560px] lg:max-w-[500px] xl:max-w-[540px] h-auto" 
          />
        </div>
        
        <!-- Glowing background effect -->
        <div class="absolute -top-20 -right-20 w-80 h-80 bg-primary rounded-full opacity-20 blur-3xl"></div>
        <div class="absolute -bottom-20 -left-20 w-80 h-80 bg-secondary rounded-full opacity-20 blur-3xl"></div>
      </div>
    </div>
  </div>
</section>
