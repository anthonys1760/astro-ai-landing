---
import { Image } from 'astro:assets';
import Button from "./Button.astro";
---

<section class="py-20 overflow-hidden">
  <div class="container-custom">
    <div class="grid lg:grid-cols-2 items-center gap-12">
      <div>
        <h1 class="text-4xl md:text-5xl font-bold mb-6">
          <span>Chat with the</span>
          <span class="gradient-text block">Future of AI</span>
        </h1>
        
        <p class="text-lg text-gray-300 mb-8">
          Astro AI is your personal AI assistant that helps you get things done. 
          Ask questions, create content, solve problems, and have natural conversations 
          with advanced AI models at your fingertips.
        </p>
        
        <div class="flex flex-wrap gap-4">
          <a href="/#waitlist" class="btn btn-primary">
            Join Waitlist
          </a>
          <a href="/#waitlist" class="btn bg-dark-light hover:bg-opacity-80">
            See Demo
          </a>
        </div>
        
        
      </div>
      
      <div class="relative">
        <!-- App Screenshot with existing mockup -->
        <div class="flex justify-center items-center">
          <img 
            src="/astro-ai.png" 
            alt="Astro AI App Screenshot" 
            class="max-w-[95%] md:max-w-[90%] lg:max-w-[85%] h-auto" 
          />
        </div>
        
        <!-- Glowing background effect -->
        <div class="absolute -top-20 -right-20 w-80 h-80 bg-primary rounded-full opacity-20 blur-3xl"></div>
        <div class="absolute -bottom-20 -left-20 w-80 h-80 bg-secondary rounded-full opacity-20 blur-3xl"></div>
      </div>
    </div>
  </div>
</section>
