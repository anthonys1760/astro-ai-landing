<section id="pricing" class="py-20">
  <div class="container-custom">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">
        <span class="gradient-text">Pricing Plans</span>
      </h2>
      <p class="text-gray-300 max-w-2xl mx-auto">
        Choose the perfect plan that fits your needs. Start for free, upgrade as you grow.
      </p>
    </div>
    
    <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
      {[
        {
          name: "Free",
          price: "$0",
          period: "Forever",
          description: "Perfect for trying out Astro AI",
          features: [
            "30 AI queries per month",
            "Basic response generation",
            "Mobile app access",
            "24/7 support",
          ],
          highlight: false,
          btnText: "Get Started",
        },
        {
          name: "Premium",
          price: "$20.00",
          period: "per month",
          description: "Ideal for daily AI assistance",
          features: [
            "Unlimited AI queries",
            "Advanced AI models",
            "Priority response time",
            "All platforms access",
            "Custom AI training",
            "Early access to new features",
          ],
          highlight: true,
          btnText: "Go Premium",
        },
        {
          name: "Team",
          price: "$49.99",
          period: "per month",
          description: "For teams and businesses",
          features: [
            "Everything in Premium",
            "Up to 5 team members",
            "Shared workspaces",
            "Team analytics",
            "Admin controls",
            "API access",
            "Dedicated support",
          ],
          highlight: false,
          btnText: "Contact Sales",
        }
      ].map(plan => (
        <div class={`rounded-xl overflow-hidden border ${plan.highlight ? 'border-primary' : 'border-gray-700'}`}>
          <div class={`p-8 ${plan.highlight ? 'bg-primary bg-opacity-10' : 'bg-dark-light'}`}>
            <h3 class="text-xl font-bold mb-2">{plan.name}</h3>
            <div class="flex items-baseline gap-1 mb-4">
              <span class="text-4xl font-bold">{plan.price}</span>
              <span class="text-gray-400">{plan.period}</span>
            </div>
            <p class="text-gray-300 mb-4">{plan.description}</p>
            <a 
              href="/#waitlist" 
              class={`block w-full py-3 px-6 rounded-lg text-center font-medium ${
                plan.highlight 
                  ? 'bg-primary hover:bg-opacity-90 text-white' 
                  : 'bg-dark hover:bg-opacity-80 text-white'
              }`}
            >
              {plan.btnText}
            </a>
          </div>
          <div class="p-8 bg-dark">
            <p class="font-medium mb-4">What's included:</p>
            <ul class="space-y-3">
              {plan.features.map(feature => (
                <li class="flex items-start gap-2">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary mt-0.5" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                  <span class="text-gray-300">{feature}</span>
                </li>
              ))}
            </ul>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
