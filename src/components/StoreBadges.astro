---
interface Props {
  href?: string;
  variant?: 'solid' | 'outline' | 'glass';
}
const { href = "/#waitlist", variant = 'solid' } = Astro.props as Props;

const badgeBase = `group inline-flex items-center gap-3 rounded-xl px-4 py-3 w-[240px] h-[68px] sm:w-[260px] sm:h-[76px] md:w-[300px] md:h-[84px] transition-all border`;
const badgeSolid = `bg-black text-white border-white/10 hover:opacity-90 shadow-[0_0_0_1px_rgba(255,255,255,0.06)]`;
const badgeOutline = `bg-white/5 text-white border-white/20 hover:bg-white/10 backdrop-blur`;
const badgeGlassOuter = `group rounded-2xl p-[1px] bg-gradient-to-r from-primary/40 to-secondary/40`;
const badgeGlassInner = `flex items-center gap-3 rounded-xl bg-white/0 hover:bg-white/5 backdrop-blur px-4 py-3 w-[240px] h-[68px] sm:w-[260px] sm:h-[76px] md:w-[300px] md:h-[84px] text-white transition-all`;

const iconBase = `shrink-0 flex items-center justify-center w-8 h-8 sm:w-9 sm:h-9 md:w-10 md:h-10 rounded-lg`;
const iconSolid = `bg-white/10`;
const iconOutline = `bg-white/10`;

const outer = variant === 'glass' ? badgeGlassOuter : `${badgeBase} ${variant === 'outline' ? badgeOutline : badgeSolid}`;
const inner = variant === 'glass' ? badgeGlassInner : '';
---
<div class="flex flex-col sm:flex-row items-stretch sm:items-start gap-3 sm:gap-4">
  <!-- App Store badge -->
  <a href={href} class={outer}>
    <span class={inner}>
      <span class={`${iconBase} ${variant === 'outline' || variant === 'glass' ? iconOutline : iconSolid}`}>
      <!-- Apple logo -->
      <svg viewBox="0 0 24 24" width="24" height="24" aria-hidden="true" fill="currentColor" class="text-white">
        <path d="M16.365 1.43c.01 1.078-.397 1.984-1.02 2.642-.65.684-1.704 1.21-2.74 1.14-.09-1.053.417-2.1 1.055-2.75.677-.688 1.816-1.204 2.706-1.032zM20.62 17.082c-.51 1.174-.755 1.692-1.408 2.73-.914 1.43-2.204 3.216-3.8 3.235-1.422.014-1.787-.934-3.322-.934-1.535 0-1.935.906-3.35.948-1.564.042-2.758-1.546-3.675-2.97-2.005-3.074-2.51-6.71-1.108-8.633.88-1.204 2.267-1.91 3.585-1.91 1.676 0 2.73.97 4.112.97 1.34 0 2.158-.972 4.12-.972 1.31 0 2.69.712 3.57 1.92-3.136 1.72-2.628 6.223.376 7.326z"/>
      </svg>
      </span>
      <span class="text-left leading-tight">
        <span class="block text-[10px] sm:text-xs text-gray-300">Download on the</span>
        <span class="block text-lg sm:text-xl md:text-2xl font-semibold">App Store</span>
      </span>
    </span>
  </a>

  <!-- Google Play badge -->
  <a href={href} class={outer}>
    <span class={inner}>
      <span class={`${iconBase} ${variant === 'outline' || variant === 'glass' ? iconOutline : iconSolid}`}>
      <!-- Google Play icon -->
      <svg viewBox="0 0 24 24" width="24" height="24" aria-hidden="true" class="text-white">
        <defs>
          <linearGradient id="gpGrad" x1="0%" y1="0%" x2="100%" y2="100%">
            <stop offset="0%" stop-color="#34A853" />
            <stop offset="50%" stop-color="#FBBC05" />
            <stop offset="100%" stop-color="#EA4335" />
          </linearGradient>
        </defs>
        <path d="M3 2.5l11.5 9.5L3 21.5V2.5zM16 12L20.5 8.5c.9-.7 1.5-.3 1.5.7v9.6c0 1-.6 1.4-1.5.7L16 16V12z" fill="url(#gpGrad)"/>
      </svg>
      </span>
      <span class="text-left leading-tight">
        <span class="block text-[10px] sm:text-xs text-gray-300">Get it on</span>
        <span class="block text-lg sm:text-xl md:text-2xl font-semibold">Google Play</span>
      </span>
    </span>
  </a>
</div>
