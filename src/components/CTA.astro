---
import StoreBadges from './StoreBadges.astro';
---

<section id="download" class="py-20 bg-gradient-to-r from-primary to-secondary bg-opacity-10">
  <div class="container-custom">
    <div class="max-w-3xl mx-auto text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">
        Create more with Astro AI X
      </h2>
      <p class="text-lg text-gray-200 mb-8">
        From ideas to code, from research to summariesâ€”everything in one fast, beautiful app. Download on iOS or Android.
      </p>
      
      <div class="flex justify-center mb-6">
        <StoreBadges href="/#waitlist" />
      </div>
      
      <div class="mb-10">
        <a href="/#waitlist" class="text-sm text-gray-200 underline hover:opacity-90"></a>
      </div>
      
      <div class="flex justify-center">
        <div class="bg-dark-light p-4 rounded-lg inline-flex items-center gap-3">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary">
            <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
          </svg>
          <span class="text-sm text-gray-300">Your data is secure. We prioritize your privacy.</span>
        </div>
      </div>
    </div>
  </div>
</section>
