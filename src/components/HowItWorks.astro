<section id="how-it-works" class="py-20">
  <div class="container-custom">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">
        <span class="gradient-text">How Astro AI Works</span>
      </h2>
      <p class="text-gray-300 max-w-2xl mx-auto">
        Seamless AI assistance in three simple steps.
      </p>
    </div>
    
    <div class="relative">
      <!-- Connection line -->
      <div class="hidden md:block absolute top-1/2 left-0 w-full h-0.5 bg-gradient-to-r from-primary to-secondary -translate-y-1/2"></div>
      
      <div class="grid md:grid-cols-3 gap-8 relative">
        {[
          {
            step: "01",
            title: "Download & Install",
            description: "Get Astro AI on your device from the App Store, Google Play, or as a browser extension."
          },
          {
            step: "02",
            title: "Ask Anything",
            description: "Type your questions or requests in natural language. Astro AI understands what you need."
          },
          {
            step: "03",
            title: "Get Instant Results",
            description: "Receive thoughtful, accurate responses and solutions within seconds."
          }
        ].map((item, index) => (
          <div class="bg-dark-light p-8 rounded-xl relative z-10">
            <div class="w-12 h-12 rounded-full bg-primary flex items-center justify-center text-lg font-bold mb-4">
              {item.step}
            </div>
            <h3 class="text-xl font-semibold mb-2">{item.title}</h3>
            <p class="text-gray-300">{item.description}</p>
          </div>
        ))}
      </div>
    </div>
    
    <div class="mt-16 text-center">
      <a href="#waitlist" class="btn btn-primary">
        Get Started Now
      </a>
    </div>
  </div>
</section>
