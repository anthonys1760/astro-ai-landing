---
interface Props {
  title?: string;
  subtitle?: string;
}

const { 
  title = "Join the Waitlist",
  subtitle = "Be the first to know when Astro AI launches. Early access members will receive premium features for free."
} = Astro.props;
---

<section id="waitlist" class="py-20 bg-dark-light">
  <div class="container-custom">
    <div class="max-w-3xl mx-auto text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">
        <span class="gradient-text">{title}</span>
      </h2>
      <p class="text-gray-300 mb-8 max-w-2xl mx-auto">
        {subtitle}
      </p>

      <div class="bg-dark p-8 rounded-xl shadow-glow">
        <form action="https://formspree.io/f/mzzgaddp" method="POST" class="space-y-4">
          <div class="grid md:grid-cols-2 gap-4">
            <div>
              <label for="firstName" class="block text-sm font-medium text-gray-300 mb-1">First Name</label>
              <input 
                type="text" 
                id="firstName" 
                name="firstName" 
                class="w-full px-4 py-3 bg-dark-light border border-gray-700 rounded-lg focus:ring-primary focus:border-primary" 
                placeholder="John"
                required
              >
            </div>
            <div>
              <label for="lastName" class="block text-sm font-medium text-gray-300 mb-1">Last Name</label>
              <input 
                type="text" 
                id="lastName" 
                name="lastName" 
                class="w-full px-4 py-3 bg-dark-light border border-gray-700 rounded-lg focus:ring-primary focus:border-primary" 
                placeholder="Doe"
              >
            </div>
          </div>

          <div>
            <label for="email" class="block text-sm font-medium text-gray-300 mb-1">Email Address</label>
            <input 
              type="email" 
              id="email" 
              name="email" 
              class="w-full px-4 py-3 bg-dark-light border border-gray-700 rounded-lg focus:ring-primary focus:border-primary" 
              placeholder="you@example.com"
              required
            >
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2">Device Preference</label>
            <div class="flex gap-4">
              <div class="flex items-center">
                <input 
                  type="radio" 
                  id="android" 
                  name="devicePreference" 
                  value="Android"
                  class="w-4 h-4 text-primary bg-dark-light border-gray-700 focus:ring-primary"
                  required
                >
                <label for="android" class="ml-2 text-sm font-medium text-gray-300">Android</label>
              </div>
              <div class="flex items-center">
                <input 
                  type="radio" 
                  id="iphone" 
                  name="devicePreference" 
                  value="iPhone"
                  class="w-4 h-4 text-primary bg-dark-light border-gray-700 focus:ring-primary"
                >
                <label for="iphone" class="ml-2 text-sm font-medium text-gray-300">iPhone</label>
              </div>
              <div class="flex items-center">
                <input 
                  type="radio" 
                  id="both" 
                  name="devicePreference" 
                  value="Both"
                  class="w-4 h-4 text-primary bg-dark-light border-gray-700 focus:ring-primary"
                >
                <label for="both" class="ml-2 text-sm font-medium text-gray-300">Both</label>
              </div>
            </div>
          </div>

          <div class="flex items-start">
            <div class="flex items-center h-5">
              <input 
                id="updates" 
                name="updates" 
                type="checkbox" 
                class="w-4 h-4 bg-dark-light border border-gray-700 rounded focus:ring-primary"
                checked
              >
            </div>
            <div class="ml-3 text-sm">
              <label for="updates" class="text-gray-300">Send me product updates and announcements</label>
            </div>
          </div>

          <div class="pt-2">
            <button 
              type="submit" 
              class="w-full btn btn-primary py-3"
            >
              Join the Waitlist
            </button>
          </div>
          
          <p class="text-xs text-gray-400 mt-4">
            By joining, you agree to our Terms of Service and Privacy Policy. We'll never share your information.
          </p>
        </form>
      </div>
    </div>
  </div>
</section>

<style>
  .shadow-glow {
    box-shadow: 0 0 30px rgba(71, 7, 234, 0.15);
  }
</style>
