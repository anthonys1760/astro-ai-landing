<section id="features" class="py-20 bg-dark-light">
  <div class="container-custom">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">
        <span class="gradient-text">Feature Highlights</span>
      </h2>
      <p class="text-gray-300 max-w-2xl mx-auto">
        Your all‑in‑one toolkit to chat, write, code, and summarize with ultra‑fast streaming and a beautiful, accessible UI.
      </p>
    </div>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
      {[
        {
          icon: "⚡",
          title: "Fast Streaming",
          description: "Near‑instant responses with smooth, reliable chunking. No cut‑offs. No waiting."
        },
        {
          icon: "⌨️",
          title: "Code Assistant",
          description: "Generate, explain, fix bugs, and optimize with purpose‑built tools. ⌨️ 💡 🐛 🚀"
        },
        {
          icon: "📝",
          title: "Summarize Anything",
          description: "Turn long reads into key insights with optional tap‑to‑speak playback."
        },
        {
          icon: "🎙️",
          title: "Live Voice Chat (Beta)",
          description: "Talk hands‑free with real‑time TTS output. Marked as Beta as we continually improve."
        }
      ].map(feature => (
        <div class="bg-dark p-6 rounded-xl hover:shadow-lg transition-all duration-300 hover:-translate-y-1">
          <div class="w-12 h-12 flex items-center justify-center rounded-full bg-dark-light mb-4 text-2xl">
            {feature.icon}
          </div>
          <h3 class="text-xl font-semibold mb-2">{feature.title}</h3>
          <p class="text-gray-300">{feature.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
